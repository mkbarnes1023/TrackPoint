@page
@model TrackPoint.Pages.Account.SettingsModel
@{
    ViewData["Title"] = "User Settings";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-person-circle me-2"></i>Account Information
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>
                    
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">Account Type</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsEntraUser)
                        {
                            <span class="badge bg-primary">Microsoft Entra ID</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Local Account</span>
                        }
                    </dd>
                    
                    @if (Model.Roles.Any())
                    {
                        <dt class="col-sm-4">Roles</dt>
                        <dd class="col-sm-8">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-info me-1">@role</span>
                            }
                        </dd>
                    }
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="bi bi-shield-lock me-2"></i>Password Management
            </div>
            <div class="card-body">
                @if (Model.IsEntraUser)
                {
                    <div class="alert alert-info mb-0">
                        <strong>Microsoft Entra ID Account</strong>
                        <p class="mb-0 mt-2">
                            Your account is managed by your organization through Microsoft Entra ID. 
                            To change your password or manage other account settings, please visit your 
                            organization's account portal.
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <strong>Local Account</strong>
                        <p class="mb-0 mt-2">
                            Password management for local accounts is not available. 
                            Please contact your administrator if you need to reset your password.
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>