@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item me-2">
            <span class="navbar-text text-light">Welcome @User.Identity?.Name</span>
        </li>
        <li class="nav-item">
            <form asp-area="Identity"
                  asp-page="/Account/Logout"
                  asp-route-returnUrl="/"
                  method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-secondary btn-sm text-light">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <!-- Intentionally left empty to hide Login/Register links -->
}