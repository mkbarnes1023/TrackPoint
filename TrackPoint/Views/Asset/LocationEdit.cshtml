@model TrackPoint.Views.Asset.LocationEditViewModel;
@{
}
<h1>Editing a Location</h1>
@if(TempData["InputError"] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData["InputError"]
	</div>
}
<form>
	<input type="hidden" asp-for="location.LocationId">
	<div>
		<label asp-for="location.Name">Name</label>
		<input type="text" asp-for="location.Name" value="@Model.location.Name">
	</div>

	<div>
		<label asp-for="location.Abbreviation">Abbreviation</label>
		<input type="text" asp-for="location.Abbreviation" value="@Model.location.Abbreviation">
	</div>
	<div>
		<label>Update Asset Tags</label>
		<input type="checkbox" asp-for="updateAssetTags">
	</div>

	<input type="submit" value="Submit" asp-action="EditLocation">
</form>
