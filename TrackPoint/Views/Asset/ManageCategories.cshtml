@{
}
@model IEnumerable<TrackPoint.Models.Category>

<h1>Manage Categories</h1>

<div class="overflow-auto">
    @*
        Display each category in a list with options
    *@
    <ul class="list-group">
        @foreach (Category c in Model)
        {
            string modalId = $"confirmModal-{c.CategoryId}"; ;
            <li class="list-group-item">
                @c.Name (@c.Abbreviation) <a class="btn btn-warning" asp-controller="Asset" asp-action="CategoryEdit" asp-route-locationId="@c.CategoryId">Edit</a> <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@modalId">Delete</a>
                <!--Confirmation modal adapted from Matthew's in the AssetBrowser-->
                <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@($"{modalId}-label")" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="@($"{modalId}-label")">Delete Category: @c.Name (@c.Abbreviation)</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this category? <strong>All existing assets in this category will be reassigned to have no category.</strong>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <a asp-controller="Asset" asp-action="DeleteCategory" asp-route-categoryId="@c.CategoryId" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

