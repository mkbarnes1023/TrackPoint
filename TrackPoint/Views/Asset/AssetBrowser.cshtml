@model TrackPoint.Views.Asset.AssetBrowserViewModel;

@{
    ViewData["Title"] = "Browse Available Assets";
    var msg = TempData["Success"] as string;
}

@if (!string.IsNullOrEmpty(msg))
{
    <div class="alert alert-success" role="alert">
        @msg
    </div>
}
}


<h1>Browse Available Assets</h1>

<table class="table" id="asset">
    <thead>
        <tr>
            <th>Asset Tag</th>
            <th>Make</th>
            <th>Model</th>
            <th>Category</th>
            <th>Location</th>
            <th>Issued To</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Audit Trail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model._assets)
        {
            var issuedToName = asset.IssuedToUser?.UserName ?? "—";
            var categoryName = Model._categories?.FirstOrDefault(c => c.CategoryId == asset.CategoryId)?.Name ?? "-";
            var locationName = Model._locations?.FirstOrDefault(c => c.LocationId == asset.LocationId)?.Name ?? "-";
            var statusRaw = (asset.AssetStatus ?? "").ToString().Trim();
            var statusKey = statusRaw.ToLowerInvariant();

            string statusColorClass;
            if (statusKey == "inuse" || statusKey == "undermaintenance")
            {
                statusColorClass = "text-danger"; // red
            }
            else if (statusKey == "instorage" || statusKey == "transfered" || statusKey == "transferred")
            {
                statusColorClass = "text-success"; // green
            }
            else if (statusKey == "retired" || statusKey == "lost")
            {
                statusColorClass = "text-secondary"; // grey
            }
            else
            {
                statusColorClass = "";
            }

            var modalId = $"confirmModal-{asset.AssetId}";
            <tr>
                <td>
                    <a asp-controller="Asset" asp-action="AssetView" asp-route-assetTag="@asset.AssetTag">@asset.AssetTag</a>
                </td>
                <td>@asset.Make</td>
                <td>@asset.Model</td>
                <td>@categoryName</td>
                <td>@locationName</td>
                <td>@issuedToName</td>
                <td class="@statusColorClass">@statusRaw</td>
                <td>@asset.Notes</td>
                <td>
                    <a asp-controller="Asset" asp-action="AuditTrail" asp-route-assetTag="@asset.AssetTag" class="btn btn-primary">View Audit Trail</a>
                </td>
                <td>
                    @* Borrow flow: show button only when asset is available/in storage/transfered *@
                    @if (statusKey == "instorage" || statusKey == "transfered" || statusKey == "transferred")
                    {
                        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#@modalId">
                            Borrow
                        </button>

                        <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@($"{modalId}-label")" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="@($"{modalId}-label")">Borrow Asset</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to check out asset <strong>@asset.AssetTag</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <a asp-controller="Asset" asp-action="checkOut" asp-route-assetTag="@asset.AssetTag" class="btn btn-primary">Confirm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-outline-success disabled" aria-disabled="true">Borrow</button>
                    }

                    <a class="btn btn-sm btn-warning" asp-controller="Asset" asp-action="AssetEdit" asp-route-assetTag="@asset.AssetTag">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Asset" asp-action="DeleteAsset" asp-route-assetTag="@asset.AssetTag">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- DataTables -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#asset').DataTable();
    });
</script>