@model IEnumerable<TrackPoint.Models.Asset>
@{
}

<h1>Browse Available Assets</h1>
<table id="Assets" class="table">
    <thead>
        <tr>
            <th>Asset Tag</th>
            <th>Make</th>
            <th>Model</th>
            <th>Category</th>
            <th>Location</th>
            <th>Issued To</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Actions</th>
		</tr>
    </thead>
    <tbody>
        @foreach (var asset in Model)
        {
            <tr>
                <td>@asset.AssetTag</td>
                <td>@asset.Make</td>
                <td>@asset.Model</td>
                <td>@asset.Category</td>
                <td>@asset.Location</td>
                <td>@asset.IssuedTo</td>
                <!-- Color statuses -->
                <!-- 
                    Key: 
                     - Red: Unavailable to borrow
                     - Green: Available to borrow
                     - Grey: No longer in circulation
                -->
                @if (asset.Status == Asset.AssetStatus.InUse || asset.Status == Asset.AssetStatus.UnderMaintenance)
                {
                    <td style="color:red">@asset.Status</td>
                }
                else if (asset.Status == Asset.AssetStatus.InStorage || asset.Status == Asset.AssetStatus.Transfered)
                {
                    <td style="color:green">@asset.Status</td>
                }
                else if(asset.Status == Asset.AssetStatus.Retired || asset.Status == Asset.AssetStatus.Lost)
                {
                    <td style="color:grey">@asset.Status</td>
                }
                else
                {
                    <td>@asset.Status</td>
				}
                <td>@asset.Notes</td>
                <td>
                    <!-- 
                        Disable the button for unavailable assets.
                        asp-action will be added in future iterations.
                    -->
                    @if (asset.Status == Asset.AssetStatus.InStorage || asset.Status == Asset.AssetStatus.Transfered)
                    {
                        <a class="btn btn-sm btn-success">Borrow</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-success disabled" aria-disabled="true">Borrow</a>
                    }
                </td>
            </tr>
		}
    </tbody>
</table>

