@model IEnumerable<TrackPoint.Models.TransferLog>
@{
        ViewData["Title"] = "Transfer Log";
}
<style>
    body {
        background: aliceblue;
        font-family: 'DM Sans', system-ui, -apple-system, "Segoe UI", Roboto, Arial;
    }

    h1 {
        font-weight: 700;
        font-size: 45px;
        color: #064973;
    }

    .page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
        background: #fff;
    }

    .card {
        background: #fff;       
        padding: 36px;
        border-radius:8px;       
        box-shadow: 0 20px 40px rgba(15, 42, 68, 0.15), 0 4px 8px rgba(0, 0, 0, 0.05);
        overflow-x:auto;
    }

        .card h1 {
            font-size: 22px;
            font-weight: 600;
            margin-bottom: 28px;
            text-align: center;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

        .table thead {
            background: #f9fafb;
        }
        .table th {
            text-align: left;
            padding: 14px 16px;
            font-weight: 600;
            color: #344054;
            border-bottom: 1px solid #eaecf0;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        /* Body cells */
        .table td {
            padding: 16px;
            border-bottom: 1px solid #f2f4f7;
            color: #475467;
        }

        /* Row hover */
        .table tbody tr:hover {
            background: #f9fafb;
            transition: 0.2s ease;
        }

    .field {
        margin-bottom: 22px;
    }

    label {
        font-size: 14px;
        font-weight: 600;
        color: #475569;
        margin: 26px 0 14px;
    }

    input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        font-size: 14px;
        transition: border 0.2s, box-shadow 0.2s;
    }

        input:focus {
            outline: none;
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
        }

    textarea {
        width: 100%;
        padding: 12px 14px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        font-size: 14px;
        transition: border 0.2s, box-shadow 0.2s;
    }


    select {
        width: 100%;
        padding: 12px 14px;
        border-radius: 8px;
        border: 1px solid #d1d5db;
        font-size: 14px;
        transition: border 0.2s, box-shadow 0.2s;
    }

        select:focus {
            outline: none;
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
        }

    .section-title {
        font-size: 14px;
        font-weight: 600;
        color: #475569;
        margin: 26px 0 14px;
    }

    .toggle-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 14px;
        font-size: 14px;
        color: #334155;
    }

    /* Toggle Switch */
    .switch {
        position: relative;
        width: 44px;
        height: 24px;
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        inset: 0;
        background: #d1d5db;
        border-radius: 999px;
        transition: background 0.2s;
    }

        .slider::before {
            content: "";
            position: absolute;
            width: 18px;
            height: 18px;
            top: 3px;
            left: 3px;
            background: #fff;
            border-radius: 50%;
            transition: transform 0.2s;
        }

    .switch input:checked + .slider {
        background: #7c3aed;
    }

        .switch input:checked + .slider::before {
            transform: translateX(20px);
        }

    .primary-btn {
        width: 100%;
        margin-top: 28px;
        padding: 14px;
        font-size: 15px;
        font-weight: 600;
        color: #fff;
        background: linear-gradient(135deg, #4f46e5, #7c3aed);
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: transform 0.15s, box-shadow 0.15s;
    }

        .primary-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.35);
        }
</style>

<div class="page">
        <h1>Transfer Log</h1>
        <div class="section">
        @if (Model == null)
        {
            <p>Transfer log is empty.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th></th> <!-- Divider -->
                        <th>Asset Tag</th>
                        <th>Make & Model</th>
                        <th></th> <!-- Divider -->
                        <th>Transfer Type</th>
                        <th>Transfer Details</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tLogEntry in Model)
                    {
                        <tr>
                            <td>@tLogEntry.TransferLogId</td>
                            <td>·</td>
                            <td>@tLogEntry.Asset.AssetTag</td>
                            <td>@tLogEntry.Asset.Make @tLogEntry.Asset.Model</td>
                            <td>·</td>
                            @switch (tLogEntry.eventType)
                            {
                                case Enums.eventType.Creation:
                                    <td>Asset Creation</td>
                                    <td>Asset @tLogEntry.Asset.AssetTag created</td>
                                    break;
                                case Enums.eventType.BorrowerTransfer:
                                    Console.WriteLine($"\n\n\n ID: {tLogEntry.TransferLogId} | OldBorrowerID is Null: {tLogEntry.OldBorrowerId == null} \n\n\n");
                                    @if (tLogEntry.OldBorrowerId == null) @* Check Out *@
                                    {
                                        <td>Check Out</td>
                                        <td>Storage -> @tLogEntry.NewBorrowerId</td>
                                    }
                                    else if (tLogEntry.NewBorrowerId == null) @* Check In *@
                                    {
                                        <td>Check In</td>
                                        <td>@tLogEntry.OldBorrowerId -> Storage</td>
                                    }
                                    else @* Borrower Transfer *@
                                    {
                                        <td>Borrower Transfer</td>
                                        <td>@tLogEntry.OldBorrowerId -> @tLogEntry.NewBorrowerId</td>
                                    }
                                    break;
                                case Enums.eventType.StatusChange:
                                    <td>Status Change</td>
                                    <td>@tLogEntry.OldStatus -> @tLogEntry.NewStatus</td>
                                    break;
                                default:
                                    <td>Unhandled Case</td>
                                    <td></td> @* TODO: Finish the other cases so they don't redirect here *@
                                    break;
                            }
                            <td>@tLogEntry.TransferDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        </div>
</div>