@model TrackPoint.Views.Asset.AssetLoanTestViewModel
@{
    ViewData["Title"] = "AssetLoan Test";
}
<h1>AssetLoan Test</h1>

@if (Model == null)
{
    <p>No asset loans found.</p>
}
else
{
    <table class="table" id="asset">
        <thead>
            <tr>
                <th>loanId</th>
                <th>AssetId</th>
                <th>BorrowerId</th>
                <th>CheckedoutDate</th>
                <th>DueDate</th>
                <th>ReturnedDate</th>
                <th>ExtendedByAdminId</th>
                <th>ApprovedByUserId</th>
                <th>ApprovedById</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assetLoan in Model._assetLoans)
            {
                <tr>
                    <td>@assetLoan.loanId</td>
                    <td>@assetLoan.AssetId</td>
                    <td>@assetLoan.BorrowerId</td>
                    <td>@assetLoan.CheckedoutDate</td>
                    <td>@assetLoan.DueDate</td>
                    <td>@assetLoan.ReturnedDate</td>
                    <td>@assetLoan.ExtendedByAdminId</td>
                    <td>@assetLoan.ApprovedByUserId</td>
                    <td>@assetLoan.ApprovedBy</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- DataTables -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#asset').DataTable();
    });
</script>